{% extends "layout.njk" %}

{% block pagina %}

<h1 class="page-header">Edição de Tarefas</h1>
<div class="col-md-6">
  <form action="/edit/{{tarefa.id}}" method="post">
    <input type="hidden" name="_method" value="put">
    <div class="form-group">
      <label for="nome">Nome</label>
      <input type="text" class="form-control" name="nome" id="nome" value="{{tarefa.nome}}">
    </div>
    <div class="form-group">
      <label for="descricao">Descrição</label>
      <input type="text" class="form-control" name="descricao" id="descricao" value="{{tarefa.descricao}}">
    </div>
    <div class="form-group">
      <label for="prazo">Prazo</label>
      <input type="date" class="form-control" name="prazo" id="prazo" value="{{tarefa.prazo}}">
    </div>
    <div class="form-group">
        <label for="prioridade">Prioridade</label>
        <select id="prioridade" class="form-control" type="text" name="prioridade" value="{{tarefa.prioridade}}">
        <option selected>Escolha...</option>
        <option>Baixa</option>
        <option>Média</option>
        <option>Alta</option>
      </select>
    </div>
    <div class="form-group">
        <label for="concluida">Conclusão</label>
        <select id="concluida" class="form-control" type="text" name="concluida" value="{{tarefa.concluida}}">
        <option selected>Escolha...</option>
        <option>Não Concluída</option>
        <option>Concluída</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="/" class="btn btn-default">Voltar</a>
  </form>
</div>



{% endblock %}
